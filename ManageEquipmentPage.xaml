<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSY_Project.ManageEquipmentPage"
             Title="Manage Equipment">
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Manage Equipment" 
                FontSize="24" 
                HorizontalOptions="Center" />
        <Entry x:Name="EquipmentNameEntry"
            Placeholder="Equipment Name" />
        
        <Entry x:Name="EquipmentCategoryEntry"
            Placeholder="Equipment Category" />

        <Button Text="Add Equipment"
            Clicked="OnAddEquipmentClicked" />

        <Entry x:Name="EquipmentIdEntry"
            Placeholder="Equipment ID" />
        
        <Button Text="Delete Equipment"
            Clicked="OnDeleteEquipmentClicked" />
    </StackLayout>
</ContentPage>