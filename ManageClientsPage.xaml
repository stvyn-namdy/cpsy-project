<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSY_Project.ManageClientsPage"
             Title="Manage Equipment">
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Manage Customers" 
                FontSize="24" 
                HorizontalOptions="Center" />
        <Entry x:Name="CustomerNameEntry"
            Placeholder="Customer Name" />
        
        <Entry x:Name="CustomerContactEntry"
            Placeholder="Contact Information" />

        <Button Text="Add Customer"
            Clicked="OnAddCustomerClicked" />

        <Entry x:Name="CustomerIdEntry"
            Placeholder="Customer ID" />
        
        <Button Text="Delete Customer"
            Clicked="OnDeleteCustomerClicked" />
    </StackLayout>
</ContentPage>