<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSY_Project.ProcessRentalsPage"
             Title="Process Rentals">
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Process Rentals" 
                FontSize="24" 
                HorizontalOptions="Center" />
        <Entry x:Name="EquipmentIdEntry" Placeholder="Equipment ID" />
        <Entry x:Name="ClientIdEntry" Placeholder="Client ID" />
        <Button Text="Rental Equipment" Clicked="OnRentEquipmentClicked" />

    </StackLayout>
</ContentPage>