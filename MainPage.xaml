<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSY_Project.MainPage"
             Title="Rental Equipment Application">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Equipment Rental System"
            FontSize="24"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
            <Button Text="Manage Equipment"
                Clicked="OnManageEquipmentClicked" />
            <Button Text="Manage Clients"
                Clicked="OnManageClientsClicked" />
            <Button Text="View Equipment"
                Clicked="OnViewEquipmentClicked" />
            <Button Text="View Clients"
                Clicked="OnViewCustomerClicked" />
            <Button Text="Process Rentals"
                Clicked="OnProcessRentalsClicked" />
    </StackLayout>
</ContentPage>